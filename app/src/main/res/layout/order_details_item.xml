<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@color/grey">

    <TextView
        android:id="@+id/order_details_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/order_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Date"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/order_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Name"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/order_surname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Surname"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/order_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Price"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

</LinearLayout>
